{
  "name": "main",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "prisma": {
    "seed": "ts-node prisma/seeds/seed.ts"
  },
  "scripts": {
    "build": "nest build main && nest build admin",
    "build:main": "nest build main",
    "build:admin": "nest build admin",
    "seed": "prisma db seed",
    "reset": "prisma migrate reset --force",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "dev": "concurrently \"nest start main --watch\" \"nest start admin --watch\"",
    "debug": "nest start --debug --watch",
    "prod": "node dist/apps/main/main.js && node dist/apps/admin/main.js",
    "prod:main": "pm2 start ./dist/apps/main/main.js -i 10",
    "prod:admin": "pm2 start ./dist/apps/admin/main.js -i 10",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/main/test/jest-e2e.json",
    "perf": "k6 run performance/login-test.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.758.0",
    "@nestjs/cache-manager": "^3.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^8.0.7",
    "@nestjs/websockets": "^10.0.0",
    "@prisma/client": "^5.21.1",
    "@types/k6": "^0.54.2",
    "@types/multer": "^1.4.12",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^6.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "k6": "^0.0.0",
    "multer": "^1.4.5-lts.1",
    "nestjs-i18n": "^10.5.0",
    "nestjs-s3": "^2.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pm2": "^5.4.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.21.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/role(|/.*)$": "<rootDir>/libs/role/src/$1",
      "^@app/roles(|/.*)$": "<rootDir>/libs/roles/src/$1",
      "^@app/permissions(|/.*)$": "<rootDir>/libs/permissions/src/$1",
      "^@app/users(|/.*)$": "<rootDir>/libs/users/src/$1",
      "^@app/password(|/.*)$": "<rootDir>/libs/password/src/$1",
      "^@app/token(|/.*)$": "<rootDir>/libs/token/src/$1",
      "^@app/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^@app/sessions(|/.*)$": "<rootDir>/libs/sessions/src/$1",
      "^@app/media(|/.*)$": "<rootDir>/libs/media/src/$1"
    }
  }
}
